<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"> <!-- 点击时有水波纹效果 -->

    <!-- 开关，放置在最右边 -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_setting_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <!-- 文本内容区域，放置在开关的左边 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/switch_setting_enabled"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置标题"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_setting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是这个配置的详细描述信息"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>